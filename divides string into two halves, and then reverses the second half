
package dividestrreverse;
import java.lang.Math;
import java.util.*;
public class Dividestrreverse { 
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        String s1=sc.nextLine();
        double l=s1.length();
        
        
        double mid =  Math.round(l / 2.0);
        
        char []arr=s1.toCharArray();
        for(int i=0;i<mid;i++){
            System.out.print(arr[i]);
        }
        for(int i=(int)l-1;i>=mid;i--){
            System.out.print(arr[i]);
        }
    }
    
}
